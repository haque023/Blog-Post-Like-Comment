<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>User crete and logon</title>
</head>
<body>

    <div class="row">
        <form class="form-group col-md-6" method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Create">
            <div class="row">
             <div class="col-md-12 text-center"><h3>Create New Member</h3></div>  
                <div class="col-xs-8">
                    <input type="text" class="form-control" name="name"  placeholder="name..." />
                </div>
                <div class="col-xs-4">
                    <input type="submit" name="create" value="submit" class="btn btn-sm btn-success" />
                </div>

            </div>
        </form>

        <form class="form-group col-md-6"  method="post" enctype="multipart/form-data" asp-controller="User" asp-action="SingIn">

            <div class="row" >
                <div class="col-md-12 text-center"><h3>Sign-In</h3></div>

                <div class="col-xs-8">
                    <input type="text" class="form-control" name="name" placeholder="name..." />
                </div>
                <div class="col-xs-4">
                    <input type="submit" value="signin" name="create" class="btn btn-sm btn-info" />
                </div>

            </div>
        </form>
    </div>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>